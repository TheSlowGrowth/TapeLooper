{
    "version": "2.0.0",
    "type": "shell",
    "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated"
    },
    "windows": {
        "options": {}
    },
    "tasks": [
        {
            "label": "configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-D",
                "TOOLCHAIN_PREFIX=\"${env:HOME}/dev/gcc-arm-none-eabi-9-2020-q2-update\"",
                "-D",
                "CMAKE_TOOLCHAIN_FILE=\"${workspaceRoot}/lib/libDaisy/cmake/toolchains/stm32h750xx.cmake\"",
                "-S",
                "firmware",
                "-B",
                "firmware/build",
                "-D",
                "CMAKE_EXPORT_COMPILE_COMMANDS=1",
                "-G",
                "\"Unix Makefiles\""
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "windows": {
                "command": "cmake.exe",
                "args": [
                    "-D",
                    "TOOLCHAIN_PREFIX=\\\"C:/Program Files (x86)/GNU Arm Embedded Toolchain/9 2020-q2-update\\\"",
                    "-D",
                    "CMAKE_TOOLCHAIN_FILE=\\\"${workspaceRoot}/lib/libDaisy/cmake/toolchains/stm32h750xx.cmake\\\"",
                    "-S",
                    "firmware",
                    "-B",
                    "firmware/build",
                    "-D",
                    "CMAKE_EXPORT_COMPILE_COMMANDS=1",
                    "-G",
                    "\\\"Unix Makefiles\\\""
                ],
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "configure (debug)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-D",
                "TOOLCHAIN_PREFIX=\"${env:HOME}/dev/gcc-arm-none-eabi-9-2020-q2-update\"",
                "-D",
                "CMAKE_TOOLCHAIN_FILE=\"${workspaceRoot}/lib/libDaisy/cmake/toolchains/stm32h750xx.cmake\"",
                "-D",
                "CMAKE_BUILD_TYPE=Debug",
                "-S",
                "firmware",
                "-B",
                "firmware/build",
                "-D",
                "CMAKE_EXPORT_COMPILE_COMMANDS=1",
                "-G",
                "\"Unix Makefiles\""
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "windows": {
                "command": "cmake.exe",
                "args": [
                    "-D",
                    "TOOLCHAIN_PREFIX=\\\"C:/Program Files (x86)/GNU Arm Embedded Toolchain/9 2020-q2-update\\\"",
                    "-D",
                    "CMAKE_TOOLCHAIN_FILE=\\\"${workspaceRoot}/lib/libDaisy/cmake/toolchains/stm32h750xx.cmake\\\"",
                    "-D",
                    "CMAKE_BUILD_TYPE=Debug",
                    "-S",
                    "firmware",
                    "-B",
                    "firmware/build",
                    "-D",
                    "CMAKE_EXPORT_COMPILE_COMMANDS=1",
                    "-G",
                    "\\\"Unix Makefiles\\\""
                ],
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "firmware/build"
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "clean-TapeLooper",
            "osx": {
                "command": "make",
                "args": [
                    "clean"
                ]
            },
            "linux": {
                "command": "make",
                "args": [
                    "clean"
                ]
            },
            "windows": {
                "command": "make.exe",
                "args": [
                    "clean"
                ]
            },
            "options" : {
                "cwd": "${workspaceRoot}/firmware/build"
            },
            "problemMatcher": []
        },
        {
            "label": "buildTests-TapeLooperDSP",
            "command": "make",
            "args": [
                ""
            ],
            "options": {
                    "cwd": "${workspaceFolder}/dsp/tests"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}/dsp/tests"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "label": "cleanTests-TapeLooperDSP",
            "command": "make",
            "args": [
                "clean"
            ],
            "options": {
                    "cwd": "${workspaceFolder}/dsp/tests"
            },
            "problemMatcher": []
        },
        {
            "label": "cleanBuildTests-TapeLooperDSP",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOrder": "sequence",
            "dependsOn": [
                "cleanTests-TapeLooperDSP",
                "buildTests-TapeLooperDSP"
            ],
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}/dsp"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "label": "buildTests-TapeLooper",
            "command": "make",
            "args": [
                ""
            ],
            "options": {
                    "cwd": "${workspaceFolder}/firmware/tests"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}/firmware/tests"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "label": "cleanTests-TapeLooper",
            "command": "make",
            "args": [
                "clean"
            ],
            "options": {
                    "cwd": "${workspaceFolder}/firmware/tests"
            },
            "problemMatcher": []
        },
        {
            "label": "cleanBuildTests-TapeLooper",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOrder": "sequence",
            "dependsOn": [
                "cleanTests-TapeLooper",
                "buildTests-TapeLooper"
            ],
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}/firmware/tests"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
    ]
}